
@{
    ViewBag.Title = "Edit a Movie";
}
@model AddMovie
    <div class="container">
        <form method="post">

            <div class="form-group">
                <label asp-for="Category">Category:</label>
                <input class="form-control" asp-for="Category" required />
            </div>
            <div class="form-group">
                <label asp-for="Title">Movie Title:</label>
                <input class="form-control" asp-for="Title" required />
            </div>
            <div class="form-group">
                <label asp-for="Year">Year:</label>
                <input class="form-control" asp-for="Year" required />
            </div>
            <div class="form-group">
                <label asp-for="Director">Director:</label>
                <input class="form-control" asp-for="Director" required />
            </div>
            <div class="form-group">
                <label asp-for="Rating">Movie Rating:</label>
                <select asp-for="Rating" required>
                    <option value="">Select One</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="Edited">Has This Movie Been Edited?</label>
                <select asp-for="Edited">
                    <option value="">Select One</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="LentTo">Who have you lent this movie to? (not required):</label>
                <input class="form-control" asp-for="LentTo" />
            </div>
            <div class="form-group">
                <label asp-for="Notes">Notes:</label>
                <input class="form-control" asp-for="Notes" maxlength="25" />
            </div>
            <button type="submit">Submit Movie Edit</button>
        </form>
    </div>