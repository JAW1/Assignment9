
@{
    ViewBag.Title = "See All Movies";
}

@model IEnumerable<AddMovie>
 @* This page takes all of the movies from the model and iterates them into a table *@
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited?</th><th>Lent To</th><th>Notes</th><th></th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {

                @if (@x.Title == "Independence Day")
                {
                }
                else
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                        @* Here are the edit and delete buttons that are part of the table *@
                        <td><a asp-action="Edit" asp-route-movieId="@x.MovieID">Edit</a></td>
                        <td>
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="movieID" value="@x.MovieID" />
                                <button class="alert-danger" type="submit">Delete</button>
                            </form>
                        </td>

                    </tr>
                }

            }
        </tbody>
    </table>
</div>